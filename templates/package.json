{
  "name": "{{originalName}}",
  "description": "a microservice based on zeit/micro",
  "version": "1.0.0",
  "author": {
    "name": "Gorillab",
    "email": "hello@gorillab.co",
    "url": "https://gorillab.co/"
  },
  "main": "src/index.js",
  "engines": {
    "node": ">=9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gorillab/create-micro.git"
  },
  "scripts": {
    "test": "eslint . --ignore-path .gitignore",
    "start": "micro-dev -p 9000",
    "serve": "micro -p $PORT"
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "http-status-codes": "^1.3.0",
    "joi": "^13.0.2",
    "micro": "latest",
    "micro-joi": "^3.1.0",
    "microrouter": "^3.0.0",
    "mysql2": "^1.5.1",
    "sequelize": "^4.23.0"
  },
  "license": "MIT",
  "devDependencies": {
    "eslint": "3.19.0",
    "eslint-config-airbnb": "15.0.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "5.0.1",
    "eslint-plugin-react": "7.1.0",
    "micro-dev": "latest"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": "airbnb",
    "rules": {
      "no-underscore-dangle": [
        2,
        {
          "allow": [
            "_id",
            "__v"
          ]
        }
      ],
      "no-param-reassign": [
        1,
        {
          "props": false
        }
      ],
      "func-names": [
        "error",
        "never"
      ],
      "no-await-in-loop": 0,
      "no-restricted-syntax": [
        "error",
        "WithStatement",
        "BinaryExpression[operator='in']"
      ],
      "linebreak-style": 0
    }
  }
}
