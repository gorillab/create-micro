{
  "name": "sample",
  "version": "0.0.0",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint . --ignore-path .gitignore",
    "dev": "micro-dev -p 3006 && lint",
    "start": "micro -p 3006",
    "test": "npm run lint && ava"
  },
  "env": {
    "NODE_ENV": "production"
  },
  "xo": {
    "extends": "prettier"
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "joi": "^13.0.2",
    "micro": "latest",
    "micro-joi": "^3.1.0",
    "microrouter": "^3.0.0",
    "mysql2": "^1.5.1",
    "sequelize": "^4.23.0"
  },
  "license": "MIT",
  "devDependencies": {
    "ava": "0.21.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "2.3.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "5.0.1",
    "eslint-plugin-react": "7.1.0",
    "micro-dev": "latest",
    "prettier": "1.5.3",
    "request-promise": "4.2.1",
    "test-listen": "1.0.2",
    "xo": "0.18.2"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": "airbnb",
    "rules": {
      "no-underscore-dangle": [
        2,
        {
          "allow": [
            "_id",
            "__v"
          ]
        }
      ],
      "no-param-reassign": [
        1,
        {
          "props": false
        }
      ],
      "func-names": [
        "error",
        "never"
      ],
      "no-await-in-loop": 0,
      "no-restricted-syntax": [
        "error",
        "WithStatement",
        "BinaryExpression[operator='in']"
      ],
      "linebreak-style": 0
    }
  }
}
